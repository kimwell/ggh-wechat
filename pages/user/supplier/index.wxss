.filter-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 99;
}

.filter-header {
  position: relative;
  height: 64rpx;
  line-height: 46rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ddd;
}

.search-txt {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  box-sizing: border-box;
  background-color: #f4f5f5;
  padding-left: 66rpx;
  font-size: 28rpx;
  color: #666;
}

.placeHolder {
  font-size: 28rpx;
  color: #999;
}

.icon-search {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  width: 66rpx;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 40rpx;
  color: #999;
}

.filter-column {
  position: relative;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1px solid #ddd;
}

.filter-column.hover {
  border-bottom: none;
}

.filter-column .filter-cell {
  flex: 1;
  text-align: center;
}

.filter-cell .filter-text {
  height: 40rpx;
  line-height: 40rpx;
  margin: 20rpx 0;
  width: 100%;
  display: block;
}

.filter-cell.first .filter-text {
  position: relative;
}

.filter-cell.first .filter-text::after {
  content: "";
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  width: 0;
  height: 0;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-bottom: 4px solid #ccc;
}
.filter-cell.current.up .filter-text::after{
  border-bottom-color: #1875f0;
}
.filter-cell.current.down .filter-text::before{
  border-top-color: #1875f0;
}
.filter-cell.first .filter-text::before {
  content: "";
  position: absolute;
  top: 22rpx;
  right: 30rpx;
  width: 0;
  height: 0;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 4px solid #ccc;
}

.filter-cell.center .filter-text {
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}

.filter-cell.current .filter-text {
  color: #1875f0;
}

.filter-footer {
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  box-sizing: border-box;
}

.filter-item-cell {
  display: flex;
  margin-bottom: 20rpx;
}

.filter-item-cell:last-child {
  margin-bottom: 0;
}

.filter-item-cell .cell {
  flex: 1;
}

.filter-item-cell .cell:first-child {
  text-align: left;
}

.filter-item-cell .cell:last-child {
  text-align: right;
}

.cell-text {
  display: inline-block;
  width: 96rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 4rpx;
  margin-left: 20rpx;
}

.cell-text.active {
  border-color: #1875f0;
  color: #1875f0;
}

.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9;
}

.item-wrapper {
  padding-top: 200rpx;
}

.item-wrapper .item {
  padding: 30rpx;
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.item-header {
  position: relative;
  padding-right: 290rpx;
  border-bottom: 1px solid #ddd;
  margin-right: -30rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.item-header-extra {
  position: absolute;
  right: 0;
  top: 0;
  width: 290rpx;
  display: flex;
}

.extra-cell {
  flex: 1;
  text-align: center;
}

.item-header .extra-cell .name {
  font-size: 22rpx;
  color: #999;
}

.extra-cell .num {
  font-size: 34rpx;
  color: #f18f1c;
}

.item-header .company {
  font-size: 32rpx;
  color: 333;
}

.item-header .name {
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  margin: 0 10rpx;
}

.item-header .mobile {
  font-size: 28rpx;
  color: #1875f0;
}

.item-bottom {
  display: flex;
}

.item-bottom-cell {
  flex: 1;
  font-size: 22rpx;
  color: #bdbdbd;
}

.item-bottom-cell .nums {
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.noData {
  padding-top: 250rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.noData image {
  width: 438rpx;
  height: 342rpx;
  margin-bottom: 30rpx;
}
