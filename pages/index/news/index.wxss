.switch-tab {
  position: fixed;
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  top: 0;
  left: 0;
  background-color: #fff;
}

.switch-tab .item {
  position: relative;
  flex: 1;
  text-align: center;
  height: 100%;
