@import '../../static/css/fonts/fonts.wxss';

.nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #fff;
  padding-right: 124rpx;
  z-index: 999;
}

.nav::after {
  position: absolute;
  content: '';
  right: 122rpx;
  top: 35rpx;
  width: 1px;
  height: 40rpx;
  background-color: #ddd;
}

.today {
  position: absolute;
  width: 124rpx;
  height: 110rpx;
  line-height: 110rpx;
  right: 0;
  top: 0;
  text-align: center;
}

.today .text {
  color: #1875f0;
  font-size: 30rpx;
}

.nav .nav-wrapper {
  display: flex;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #666;
}

.nav .nav-wrapper .nav-item {
  position: relative;
  flex: 1;
  text-align: center;
  height: 90rpx;
}

.nav-wrapper .nav-item .name {
  padding: 10rpx 0 5rpx;
}

.nav-wrapper .nav-item .count {
  padding-bottom: 6rpx;
}

.nav .nav-wrapper .nav-item.current {
  color: #1875f0;
}

.nav .nav-wrapper .nav-item.current::after {
  position: absolute;
  content: '';
  bottom: -10rpx;
  width: 100%;
  left: 0;
  height: 4rpx;
  background: linear-gradient(-135.3deg, rgba(82, 122, 254, 1), rgba(67, 162, 254, 1));
}

.common-page {
  padding-top: 110rpx;
}

.common-page.offer .list {
  padding: 0 30rpx;
}

.common-page.offer .list .list-item {
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.2);
}

.list-item {
  background-color: #fff;
  margin-top: 20rpx;
}

.item-wrap {
  position: relative;
  padding: 30rpx;
}

.item-wrap .item-header {
  position: relative;
  font-size: 32rpx;
  color: #333;
  line-height: 44rpx;
}

.item-header .icon-location {
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 3rpx 20rpx;
  border-radius: 8rpx;
  border: 1px solid #1875f0;
  color: #1875f0;
  margin-left: 10rpx;
  vertical-align: 2px;
}

.item-header.header-extra .icon-location {
  position: absolute;
  top: 0;
  right: 0;
  height: 36rpx;
  line-height: 36rpx;
}

.item-wrap .item-header .options {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 30rpx;
  color: #c3c3c3;
  font-weight: bold;
}

.extra-option {
  position: absolute;
  top: 90rpx;
  right: 5rpx;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  width: 200rpx;
  border-radius: 8px;
  font-size: 32rpx;
  z-index: 900;
}

.extra-option::before {
  position: absolute;
  content: '';
  top: -28rpx;
  right: 23rpx;
  width: 0;
  height: 0;
  border-width: 16rpx;
  border-style: solid;
  border-color: transparent transparent rgba(0, 0, 0, 0.8) transparent;
}

.extra-option .option-item {
  line-height: 88rpx;
  text-align: center;
}

.extra-option .option-item .iconfont {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.extra-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
}

.item-wrap .item-header .dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #1875f0;
  margin: 0 16rpx;
  vertical-align: 2px;
}

.item-wrap .item-info {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
}

.item-wrap .item-info .split {
  display: inline-block;
  width: 1px;
  height: 28rpx;
  background-color: #ccc;
  margin: 0 20rpx;
  vertical-align: -2px;
}

.item-place, .item-remark {
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-place, .item-remark, .item-time {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.item-place {
  color: #666;
}

.item-remark, .item-time {
  color: #999;
}

.offer .item-time {
  margin: 0 -30rpx;
  padding-left: 30rpx;
}

.item-time {
  position: relative;
  margin-right: -30rpx;
  margin-bottom: 0;
  padding-top: 20rpx;
  padding-right: 30rpx;
  border-top: 1px solid #ddd;
}

.item-extra {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.special .item-extra {
  left: 30rpx;
  right: inherit;
}

.item-time.special {
  text-align: right;
}

.item-extra .tag {
  font-size: 28rpx;
}

.item-extra .tag.miss, .item-extra .tag.blue, .item-extra .tag.red {
  display: inline-block;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 20rpx;
  border-radius: 22rpx;
}

.item-extra .tag.miss {
  background-color: #ededed;
  color: #999;
}

.item-extra .tag.blue {
  background-color: #b9d5fa;
  color: #1875f0;
}

.item-extra .tag.red {
  background-color: #fbc4c0;
  color: #f13a30;
}

.item-extra .tag.detault {
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 20rpx;
  border-radius: 22rpx;
  border: 1px solid #1875f0;
  color: #1875f0;
}

.loadTips {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 25rpx 0;
}

.noData {
  padding-top: 250rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.noData image {
  width: 438rpx;
  height: 342rpx;
  margin-bottom: 30rpx;
}

.success-time {
  color: #f13a30;
}
.reset-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.3)
}
.special-btn{
  position: relative;
}
.special-btn::after{
  content: '';
  position: absolute;
  left: -30rpx;
  top: -20rpx;
  height: 90rpx;
  width: 1px;
  background-color: #ddd;
}