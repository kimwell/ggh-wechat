.search-wrapper {
  position: fixed;
  height: 184rpx;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 7;
}

.search-name {
  position: relative;
  padding: 20rpx 30rpx;
}

.search-name .iconfont {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  color: #999;
  height: 64rpx;
  line-height: 64rpx;
  width: 60rpx;
  text-align: center;
}

.search-name::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.search-name input {
  height: 64rpx;
  line-height: 64rpx;
  border: 0;
  outline: 0;
  background-color: #f4f5f5;
  border-radius: 4rpx;
  padding: 0 20rpx 0 60rpx;
}

.textHolder {
  font-size: 28rpx;
  color: #666;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 98rpx;
  width: 100%;
  background-color: #fff;
  z-index: 7;
}

.footer .check, .footer .select, .footer .btn {
  display: inline-block;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

.footer .check {
  width: 210rpx;
}

.saleSelected {
  font-size: 28rpx;
}

.saleSelected view {
  line-height: 48rpx;
}

.check .iconfont {
  vertical-align: middle;
  display: inline-block;
  margin-right: 10rpx;
}

.footer .select {
  width: 300rpx;
  background-color: #f3f8fe;
  color: #1875f0;
}

.footer .btn {
  width: 240rpx;
  background: linear-gradient(-90deg, rgba(82, 122, 254, 1), rgba(67, 162, 254, 1));
  color: #fff;
}

.footer::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.view-page {
  position: relative;
  padding: 184rpx 0 98rpx 0;
  z-index: 1;
}
.view-page.no-action{
  padding-top: 0;
}

.search-filter {
  padding: 20rpx 0;
  display: flex;
  font-size: 28rpx;
  color: #666;
}

.search-filter-cell {
  position: relative;
  flex: 1;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}

.search-filter-cell.active {
  color: #1875f0;
}

.search-filter-cell.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  width: 200rpx;
  height: 4rpx;
  background-color: #1875f0;
  transform: translateX(-50%);
}

.search-filter-cell:last-child {
  border-left: 1px solid #ddd;
}

.filter-wrap {
  position: fixed;
  width: 100%;
  height: calc(100% - 184rpx);
  top: 184rpx;
  left: 0;
  background-color: #fff;
  z-index: 99;
  padding-bottom: 98rpx;
}

.filter-wrap::before, .filter-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.filter-footer {
  position: fixed;
  width: 100%;
  height: 98rpx;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 100;
  display: flex;
}

.footer-btn {
  flex: 1;
  text-align: center;
  line-height: 98rpx;
  color: #666;
  font-size: 32rpx;
}

.footer-btn:last-child {
  color: #fff;
  background: linear-gradient(-135deg, rgba(82, 122, 254, 1), rgba(67, 162, 254, 1));
}

.saleman-item {
  height: 96rpx;
  line-height: 96rpx;
  position: relative;
  color: #666;
  font-size: 30rpx;
  padding: 0 30rpx;
  overflow: hidden;
}

.saleman-item.active {
  color: #1875f0;
}

.saleman-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.saleman-item text.item {
  display: inline-block;
  margin-right: 20rpx;
}

.saleman-item .iconfont {
  display: none;
  position: absolute;
  top: 0;
  right: 30rpx;
  color: #1875f0;
}

.saleman-item.active .iconfont {
  display: block;
}

.allot {
  padding: 60rpx 30rpx;
}

.allot .allot-item {
  display: inline-block;
  margin-right: 20rpx;
  height: 68rpx;
  line-height: 68rpx;
  width: 210rpx;
  text-align: center;
  color: #666;
  font-size: 26rpx;
  background-color: #e9e9e9;
  border-radius: 4rpx;
}

.allot .allot-item.active {
  background-color: #d1e3fc;
  color: #1875f0;
}

.allot-list {
  position: relative;
  background-color: #fff;
  padding: 30rpx 30rpx 20rpx;
  padding-left: 114rpx;
  margin-top: 20rpx;
}

.allot-list .iconfont {
  position: absolute;
  top: 50rpx;
  left: 30rpx;
  font-size: 50rpx;
}

.allot-list .iconfont.icon-BAI-fuxuankuang,
.check .iconfont.iconfont.icon-BAI-fuxuankuang {
  color: #bdbdbd;
  font-size: 50rpx;
}

.allot-list .iconfont.icon-BAI-fuxuankuangs,
.check .iconfont.iconfont.icon-BAI-fuxuankuangs {
  color: #1875f0;
  font-size: 50rpx;
}

.allot-list .time {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  border-top: 1px solid #ddd;
  margin-top: 30rpx;
  padding-top: 20rpx;
  margin-right: -30rpx;
  padding-right: 30rpx;
}

.allot-list .company {
  position: relative;
  padding-right: 170rpx;
}

.allot-list .company .contact {
  position: absolute;
  width: 170rpx;
  height: 70rpx;
  line-height: 70rpx;
  top: 0;
  right: 0;
  text-align: center;
  border-left: 1px solid #ddd;
}

.allot-list .company .contact .name {
  font-size: 30rpx;
  color: #333;
}

.allot-list .company .contact .desc {
  font-size: 22rpx;
  color: #999;
}

.allot-list .company .company-name {
  font-size: 30rpx;
  color: #333;
}

.allot-list .company .name {
  font-size: 26rpx;
  color: #666;
}

.allot-list .company .name text:last-child {
  color: #1875f0;
  display: inline-block;
  margin-left: 15rpx;
}

.allot-list .time text:last-child {
  display: inline-block;
  margin-left: 10rpx;
}

.common-cover {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 750rpx;
  background-color: #fff;
  z-index: 999;
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

.cover-header {
  position: relative;
  height: 104rpx;
  line-height: 104rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.cover-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.cover-header text {
  float: right;
  color: #1875f0;
  font-weight: normal;
}

.cover-item {
  position: relative;
  font-size: 30rpx;
  color: #333;
  padding-left: 30rpx;
  height: 96rpx;
  line-height: 96rpx;
}

.cover-item text {
  margin-right: 20rpx;
  display: inline-block;
}

.cover-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.common-cover.show {
  -webkit-transform: translateY(0) !important;
  transform: translateY(0) !important;
}

.common-cover-mask {
  display: none;
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 998;
}

.common-cover-mask.show {
  display: block;
}

.finished ,.loadMore{
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx;
  color: #666;
}

.noData {
  padding-top: 250rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.noData image {
  width: 438rpx;
  height: 342rpx;
  margin-bottom: 30rpx;
}
