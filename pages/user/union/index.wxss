/* pages/user/union/index.wxss */
page{
  background-color: #fff;
}
.union{
  padding: 40rpx 30rpx 0 66rpx;
}
.header{
  position: relative;
  font-size: 32rpx;
  height: 42rpx;
  line-height: 42rpx;
  color: #333;
}
.header::after{
  content: '';
  position: absolute;
  left: -30rpx;
  top: 13rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #1875F0;
}
.union-main{
  padding: 20rpx 0;
}
.union-main .desc{
  font-size: 26rpx;
  color: #666;
}
.union-tr{
  display: flex;
  font-size: 26rpx;
  color: #666;
  height: 88rpx;
  line-height: 88rpx;
  border: 1px solid #ddd;
  margin-bottom: -1px;
}
.union-tr .union-td{
  box-sizing: border-box;
  padding-left: 20rpx;
}
.union-tr .union-td:first-child{
  width: 174rpx;
  border-right: 1px solid #ddd;
}
.union-tr .union-td:last-child{
  width: 481rpx;
}