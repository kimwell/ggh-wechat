/* components/orderTemp/orderDetail/index.wxss */
.state-tip{
  width: 100%;
  line-height: 44rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 22rpx 0 22rpx 30rpx;
  background-color: #fff;
}

.state-tip .tip{
  margin-right: 20rpx;
}

.state-tip.tip-2{
  color: #F13A30;
}

.state-tip.tip-1{
  color: #50d166;
}

.state-tip.tip-3,.state-tip.tip-4{
  color: #F18F1C;
}

.state-tip.tip-5,.state-tip.tip-7,.state-tip.tip-7{
  color: #666;
}

.state-tip.tip-2 .dot{
  background-color: #F13A30;
}

.state-tip.tip-1 .dot{
  background-color: #50d166;
}

.state-tip.tip-3 .dot,.state-tip.tip-4 .dot{
  background-color: #F18F1C;
}

.state-tip.tip-5 .dot,.state-tip.tip-6 .dot,.state-tip.tip-7 .dot{
  background-color: #666;
}

.state-tip .dot{
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 16rpx;
  background-color: #999;
  vertical-align: middle;
  margin-right: 20rpx;
  margin-top: -3rpx;
}

.cancel-remark{
  line-height: 44rpx;
  text-indent: 35rpx;
  color: #666;
  font-size: 24rpx;
}

.title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-indent: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.base-info {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
}

.base-info .base {
  position: relative;
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 20rpx;
}

.base .text {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}

.base .dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 12rpx;
  background-color: #1875f0;
  vertical-align: middle;
  margin: -10rpx 10rpx 0;
}

.base .location {
  position: absolute;
  right: 0;
  top: 0;
  width: auto;
  height: 40rpx;
  line-height: 38rpx;
  border: 1rpx solid #1875f0;
  color: #1875f0;
  border-radius: 8rpx;
  padding: 0 8rpx;
  font-size: 28rpx;
}

.base .location .iconfont {
  color: #1875f0;
}

.base-info .normal {
  width: 100%;
  line-height: 40rpx;
  color: #666;
  margin-top: 10rpx;
  font-size: 30rpx;
}

.base-info .normal.gray {
  color: #999;
  font-size: 26rpx;
}

.base-info .normal .split {
  display: inline-block;
  width: 3rpx;
  height: 28rpx;
  vertical-align: middle;
  margin: 0 10rpx;
  background-color: #ccc;
}

.base-info .normal.date {
  font-size: 24rpx;
  text-align: right;
}

.offer-detail {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.offer-detail .group {
  display: flex;
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ddd;
}

.offer-detail .group:last-child {
  border: 0;
}

.group .label {
  width: 160rpx;
  color: #999;
}

.group .value {
  color: #333;
  width: 530rpx;
  text-align: right;
}

.group .value.red {
  color: #f13a30;
}

.order-info {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.order-info .group {
  position: relative;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.order-info .group:last-child{
  margin: 0;
}

.order-info .group .btn{
  position: absolute;
  width: auto;
  height: 40rpx;
  color: #666;
  border: 1rpx solid #999;
  line-height: 40rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
  right: 0;
  top: 0;
  border-radius: 8rpx;
}


.bottom-btn{
  position: fixed;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  bottom: 0;
  left: 0;
  text-align: right;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 899;
}

.bottom-btn .btn{
  display: inline-block;
  width: 176rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  color: #666;
  border: 1rpx solid #999;
  border-radius: 68rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.make-call{
  display: inline-block;
  width: auto;
  padding: 0 18rpx;
  height: 44rpx;
  line-height: 44rpx;
  color: #1875F0;
  border: 1rpx solid #1875F0;
  border-radius: 44rpx;
}

.level{
  display: inline-block;
  width: 80rpx;
  height: 28rpx;
  vertical-align: sub;
}


.empty{
  width: 100%;
  height: 200rpx;
}